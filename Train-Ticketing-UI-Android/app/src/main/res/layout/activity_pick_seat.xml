                android:layout_height="128dp"
                app:srcCompat="@drawable/bus1" />

            <ImageView
                android:id="@+id/imageView27"
                android:layout_width="48dp"
                android:layout_height="128dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                app:srcCompat="@drawable/bus2" />

            <ImageView
                android:id="@+id/imageView28"
                android:layout_width="48dp"
                android:layout_height="128dp"
                android:layout_marginBottom="12dp"
                app:srcCompat="@drawable/bus3" />

            <ImageView
                android:id="@+id/imageView24"
                android:layout_width="match_parent"
                android:layout_height="128dp"
                android:layout_marginVertical="12dp"
                app:srcCompat="@drawable/seat_blue" />
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/button5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:textColor="@color/white"
        android:background="@drawable/blue_button_rounded_background"
        android:text="PILIH TEMPAT DUDUK"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scrollView2" />

